<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>horizontal</type>
        <pos>0 0.11</pos>
        <size>1 1</size>
        <logoScale>1.05</logoScale>
        <logoSize>0.7 0.9</logoSize>
        <color>00000000</color>
        <maxLogoCount>5</maxLogoCount>
      </carousel>

      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/system-global-bg.png</path>
      </image>

      <text name="systemInfo">
         <pos>0 0.895</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/Roboto-Medium.ttf</fontPath>
	 <fontSize>0.019</fontSize>
      </text>
   </view>
</feature>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <pos>1.3 0.94</pos>      
         <textColor>116a9d</textColor>
         <iconColor>116a9d</iconColor>
      </helpsystem>
   </view>

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <pos>0.01 0.025</pos>
         <size>0.28 0.95</size>
         <selectorColor>1c1c1c00</selectorColor>
         <selectedColor>116a9d</selectedColor>
         <primaryColor>F7F7F7</primaryColor>
         <secondaryColor>F7F7F7</secondaryColor>
         <fontPath>./_inc/fonts/Roboto-Medium.ttf</fontPath>
         <fontSize>0.036</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>left</alignment>
      </textlist>
   </view>

   <view name="basic,detailed,video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/ingame-global-bg.png</path>
      </image>
      <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_lastplayed, md_lbl_playcount, md_rating, md_developer, md_publisher, md_genre, md_playcount, md_lastplayed">
         <pos>1 1</pos>
      </text>
      <text name="md_lbl_rating,md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_lastplayed, md_lbl_playcount,md_lbl_players,md_developer, md_publisher, md_genre, md_playcount, md_lastplayed,md_description,md_players,md_releasedate">
         <color>F7F7F7</color>
         <fontPath>./_inc/fonts/Roboto-Medium.ttf</fontPath>
         <fontSize>0.0195</fontSize>
      </text>
      <text name="md_lbl_rating">
         <pos>1.73 0.2</pos>
         <size>0.0625 0.035</size>
      </text>
      <rating name="md_rating">
         <pos>0.353 0.05</pos>
         <size>0.0063 0.04</size>
         <filledPath>./_inc/images/star_filled.png</filledPath>
         <unfilledPath>./_inc/images/star_empty.png</unfilledPath>
      </rating>
      <text name="md_lbl_players">
         <pos>0.53 0.57</pos>
         <size>0.0625 0.035</size>
         <color>116a9d</color>         
      </text>
      <text name="md_players">
         <pos>0.59 0.57</pos>
         <size>0.0625 0.035</size>
      </text>
      <text name="md_lbl_releasedate">
         <pos>0.53 0.595</pos>
         <size>0.0625 0.035</size>
         <color>116a9d</color>         
      </text>
      <datetime name="md_releasedate">
         <pos>0.59 0.595</pos>
         <size>0.0625 0.035</size>
      </datetime>
      <text name="md_lbl_genre">
         <pos>0.75 0.57</pos>
         <size>0.12 0.035</size>
         <color>116a9d</color>          
      </text>
      <text name="md_genre">
         <pos>0.81 0.57</pos>
         <size>0.12 0.035</size>
      </text>         
      <text name="md_lbl_developer">
         <pos>0.75 0.595</pos>
         <size>0.12 0.035</size>
         <color>116a9d</color>          
      </text>
      <text name="md_developer">
         <pos>0.81 0.595</pos>
         <size>0.12 0.035</size>         
      </text>
      <text name="md_description">
         <pos>0.53 0.655</pos>
         <size>0.46 0.3</size>
      </text>
   </view>

   <view name="detailed">
      <image name="md_image">
         <pos>0.755 0.32</pos>
         <maxSize>0.28 0.39</maxSize>
      </image>
   </view>

   <view name="video">
      <video name="md_video">
         <pos>0.755 0.35</pos>
         <maxSize>0.26 0.36</maxSize>
         <delay>1.0</delay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
      </video>
      <image name="md_marquee">
         <pos>0.755 0.1</pos>
         <origin>0.5 0.5</origin>
         <maxSize>0.08 0.065</maxSize>
      </image>
   </view>
   
</theme>
